@model AnyMusic.Domain.Domain.ViewModels.AddToPlaylistViewModel

<h2>Add @Model.TrackName to Playlist</h2>

<form asp-action="AddToPlaylist" method="post">
    <input type="hidden" asp-for="TrackId" />

    <div class="form-group">
        <label asp-for="PlaylistId">Select Playlist</label>
        <select asp-for="PlaylistId" class="form-control" asp-items="ViewBag.PlaylistId"></select>
    </div>

    <button type="submit" class="btn btn-primary">Add to Playlist</button>
</form>
