@model AnyMusic.Domain.Domain.ViewModels.AddToAlbum

@{
    ViewData["Title"] = "Add Track to Album";
}

<h1>Add Track to Album</h1>

<form asp-action="AddTrackToAlbum" method="post">
    <input type="hidden" asp-for="AlbumId" />
    <div class="form-group">
        <label for="TrackId">Select Track</label>
        <select class="form-control" asp-for="TrackId" asp-items="Model.Tracks">
            <option value="">-- Select a Track --</option>
        </select>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Add Track</button>
        <a asp-action="Details" asp-route-id="@Model.AlbumId" class="btn btn-secondary">Cancel</a>
    </div>
</form>
